<div class="card overflow-hidden border-bottom-1 border-secondary mb-5">
    @using (@Html.BeginForm("StaffPerformanceCreateOrUpdate", "Performance", FormMethod.Post, new { @id = "myform", enctype = "multipart/form-data" }))
    {
