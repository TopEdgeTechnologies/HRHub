                                        <p class="text-muted">@item.SectionDescription</p>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="table-responsive">
                                                <table class="table table-bordered review-table mb-0" id="myTable">
                                                    <thead>
                                                        <tr>

