@model IEnumerable<HRHUBAPI.Models.Designation>




<!-- Row -->
<div class="row row-sm mt-4">

    <div class="col-lg-12">
        @if (Convert.ToBoolean(ViewBag.IsNew))
        {
            <a asp-action="DesignationCreateOrUpdate" asp-controller="Configuration" class="btn btn-primary"><i class="fas fa-plus"></i>New</a>
        }
        <div class="card">
            <div class="card-header">
                <h3 class="card-title"> Designation Details</h3>
                <div class="card-options"> <a asp-action="DesignationCreateOrUpdate" asp-controller="Configuration" class="btn btn-primary">Add New</a> </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered text-nowrap border-bottom" id="myTable">
                        <thead>
                            <tr>
                                
                                <th class="border-bottom-0">Designation Title</th>                               
                                <th class="text-center">Status</th>
                                <th class="text-center">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Title)
                                    </td>

                                   
                                    @if (item.Status == true)
                                    {
                                        <td class="text-center"><span class="badge badge-label bg-success"><i class="mdi mdi-circle-medium"></i> Active</span></td>
                                    }
                                    else
                                    {
                                        <td class="text-center"> <span class="badge badge-label bg-danger"><i class="mdi mdi-circle-medium"></i> IsActive</span></td>

                                    }


                                    @if (Convert.ToBoolean(ViewBag.IsNew) == false && Convert.ToBoolean(ViewBag.IsEdit) == false && Convert.ToBoolean(ViewBag.IsDelete) == false)
                                    {
                                        <th class="text-center">
                                           
                                            <a asp-action="UserGroupCreateOrUpdate" asp-route-id="@item.DesignationId" class="btn btn-primary btn-icon btn-xs"> 
                                                <i class="feather feather-edit"></i> 
                                                </a>

                                        
                                            <a asp-action="UserGroupDelete" asp-route-id="@item.DesignationId" onclick="return confirm('Are you sure you want to delete')"  class="btn btn-danger btn-icon btn-xs" 
                                            ><i class="feather feather-trash-2"></i></a>

                                        </th>
                                    }
                                    else
                                    {
                                        <td class="text-end">
                                            <a asp-action="UserGroupCreateOrUpdate" asp-route-id="@item.DesignationId">
                                                <i class="fe fe-edit-2"></i>
                                                    </a>
                                            <div class="actions ">
                                                @if (Convert.ToBoolean(ViewBag.IsEdit))
                                                {

                                                    <a asp-action="UserGroupCreateOrUpdate" asp-route-id="@item.DesignationId" class="btn btn-sm bg-success-light me-2 ">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                }
                                                @if (Convert.ToBoolean(ViewBag.IsDelete))
                                                {
                                                    <a asp-action="UserGroupDelete" asp-route-id="@item.DesignationId" onclick="return confirm('Are you sure you want to delete')" class="btn btn-sm bg-danger-light">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                }
                                            </div>
                                        </td>
                                    }




                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row -->








@section scripts{

    <script>
        $(document).ready( function () {

            var msg = '@ViewBag.Success';
            if (msg !== "" && msg == '1') {

                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Success:</b> You record is Inserted Succesfully.",
                    type: "success"
                });



            }
            if (msg !== "" && msg == '2') {

                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Success:</b> You record is Updated Succesfully.",
                    type: "success"
                });



            }
            if (msg !== "" && msg == '3') {
                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Success:</b> You record is Deleted Succesfully.",
                    type: "success"
                });

            }
            if (msg !== "" && msg == '0') {
                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Error:</b> Error Occured.",
                    type: "error"
                });



            }
            $('#myTable').DataTable();
        });

    </script>

}
