@using (@Html.BeginForm("SaveExitInterviewDetail", "StaffOffBoarding", FormMethod.Post, new { @id = "myinterviewform", enctype = "multipart/form-data" }))
{
    <input type="hidden" asp-for="OffBoardingId" />
    <input type="hidden" asp-for="StaffId" />
    <div class="modal fade" id="addinterviewmodal">

        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Exit Interview</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">Interview Date</label>
                        <input asp-for="InterviewDate" class="form-control" type="date" placeholder="Enter date">
                    </div>
                    <div class="form-group">

                        <label class="form-label">Interview Remarks</label>
                        <textarea asp-for="InteriewRemarks" class="summernote" style=" height: 398px !important;"></textarea>

                    </div>


                </div>
                <div class="modal-footer">
                    <input type="button" value="Save" id="btnsave" onclick="postinterviewdata()" class="btn btn-primary" />
                    <a class="btn btn-danger" data-bs-dismiss="modal">Close</a>

                </div>
            </div>
        </div>
    </div>

}
