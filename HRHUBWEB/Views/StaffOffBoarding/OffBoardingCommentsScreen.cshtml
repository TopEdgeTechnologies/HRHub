@section scripts{

    <script>



        $(document).ready(function () {

            var msg = '@ViewBag.Success';
            if (msg !== "" && msg == '1') {
                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Success:</b> Your record is Inserted Succesfully.",
                    type: "success"
                });
            }
            if (msg !== "" && msg == '2') {
                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Success:</b> Your record is Updated Succesfully.",
                    type: "success"
                });
            }
            if (msg !== "" && msg == '3') {
                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Success:</b> Your record is Deleted Succesfully.",
                    type: "success"
                });
            }
            if (msg !== "" && msg == '0') {
                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Success:</b> Error Occured.",
                    type: "error"
                });
            }

        });

        $('#LogoAttachmentFile').change(function () {
            debugger;
            var fileInput = $(this);
            var allowedExtensions = /(\.jpg|\.jpeg|\.png)$/i;
            var fileSizeLimit = 2 * 1024 * 1024; // 2 MB
            var fileSize = this.files[0].size;
            var filePath = fileInput.val();
            if (!allowedExtensions.exec(filePath)) {
                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Warning:</b> Invalid file type. Please select a JPG, JPEG, or PNG file.",
                    type: "warning"
                });
                fileInput.val('');
                return false;
            } else if (fileSize > fileSizeLimit) {
                notif({
                    msg: "<i class='fa fa-check fs-20 me-2'></i><b>Warning:</b>' File size exceeds the limit of 2MB.",
                    type: "warning"
                });
                fileInput.val('');
                return false;
            } else {
                readURL(this)

            }

        });
        function openinterviewmodel() {

            $("#InterviewDate").val('');
            $("#InteriewRemarks").val('');
            $("#addinterviewmodal").modal('show');
        }

        function openfile() {
            //debugger;
            $('#LogoAttachmentFile').click();
        }

        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#viewlogo').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }
        }

        function postdata() {
            //debugger;
            var status = true;
            debugger;
            if ($("#Remarks").val() == "") {
                $.growl.warning({
                    message: "Please Enter Comments"
                });
                $("#Remarks").css("border-color", "red");
                status = false;
                return false;
            }
            else {
                $("#Remarks").css("border-color", "#ddd");
            }

            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false
            });
            if (status) {
                $("#myform").submit();

            }


        }

        function postinterviewdata() {
            var status = true;
            debugger;
            if ($("#InterviewDate").val() == "") {
                $.growl.warning({
                    message: "Please Enter Interview Date"
                });
                $("#InterviewDate").css("border-color", "red");
                status = false;
                return false;
            }
            else if ($("#InterviewRemarks").val() == "") {
                $.growl.warning({
                    message: "Please Enter Remarks"
                });
                $("#InterviewRemarks").css("border-color", "red");
                status = false;
                return false;
            }
            else {
                $("#InterviewRemarks").css("border-color", "#ddd");
                $("#InterviewDate").css("border-color", "#ddd");
            }

            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: 'btn btn-success',
                    cancelButton: 'btn btn-danger'
                },
                buttonsStyling: false
            });
            if (status) {
                $("#addinterviewmodal").modal('hide');
                swalWithBootstrapButtons.fire({
                    title: 'Are you sure?',
                    text: "You won't be able to revert this!",
                    icon: 'warning',
                    showCancelButton: true,
                    cancelButtonText: 'No, cancel!',
                    confirmButtonText: 'Yes, Save it!',
                    timer: 30000,
                    reverseButtons: true
                }).then((result) => {
                    if (result.isConfirmed) {
                        $("#myinterviewform").submit();
                    }
                    else if (result.dismiss === Swal.DismissReason.cancel) {
                        swalWithBootstrapButtons.fire(
                            'Cancelled',
                            'Your record is safe :)',
                            'error'
                        )
                    }
                });


            }


        }

    </script>

}
