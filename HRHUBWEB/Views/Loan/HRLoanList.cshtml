@model HRHUBAPI.Models.LoanApplication

<style>
    .select2-container--default .select2-selection--multiple .select2-selection__choice .select2-selection__choice__remove {
        background-color: #3366FF !important;
        color: white !important
    }

</style>
<!-- Row -->
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Loan Detail</h4>
                <div class="card-options">
                    <div class="btn-list">
                        <button class="btn btn-light" data-bs-toggle="tooltip" data-bs-placement="top" title="E-mail"> <i class="feather feather-mail"></i> </button>
                        <button class="btn btn-light" data-bs-placement="top" data-bs-toggle="tooltip" title="Contact"> <i class="feather feather-phone-call"></i> </button>
                        <button class="btn btn-primary" data-bs-placement="top" data-bs-toggle="tooltip" title="Info"> <i class="feather feather-info"></i> </button>
                        <button class="btn btn-primary" data-bs-placement="top" data-bs-toggle="" title="" data-bs-original-title="Filter" id="btn_Filter" fdprocessedid="gkh46"> <i class="feather feather-filter"></i> </button>
                    </div>
                </div>
            </div>
            <div class="row" id="IdFilters">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            @using (@Html.BeginForm("SearchList", "Loan", FormMethod.Post, new { @id = "myform", enctype = "multipart/form-data" }))
                            {
                                <div class="row">
                                    <div class="col-md-12 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label">Select Staff:</label>
                                            <select id="StaffId" name="StaffId" class="form-control" asp-items="@(new SelectList(@ViewBag.Staffs ,"StaffId" ,"FirstName"))">
                                                <option value="">Select Staff</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label">Select Loan Type:</label>
                                            <select id="LoanTypeId" name="LoanTypeId" class="form-control" asp-items="@(new SelectList(Model.ListLoanTypes,"LoanTypeId" ,"Title"))">
                                                <option value="">Select Loan Type</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-lg-3">
                                        <div class="form-group">
                                            <label class="form-label">Select Loan Status:</label>
                                            <select id="LoanStatusId" name="LoanStatusId" class="form-control" asp-items="@(new SelectList(Model.ListLoanStatus,"LoanStatusId" ,"Title"))">
                                                <option value="">Select Loan Status</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-2">
                                        <div class="form-group">
                                            <label class="form-label">Date From</label>
                                            <input type="date" id="ApplicationDateFrom" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control fc-datepicker" placeholder="select date" />
                                        </div>
                                    </div>
                                    <div class="col-md-12 col-lg-2">
                                        <div class="form-group">
                                            <label class="form-label">Date To</label>
                                            <input type="date" id="ApplicationDateTo" value="@DateTime.Now.ToString("yyyy-MM-dd")" class="form-control fc-datepicker" placeholder="select date" />
                                        </div>
                                    </div>

                                    <div class="col-md-12 col-lg-2">
                                        <div class="form-group mt-5">
                                            <button type="button" onclick="SearchLoan()" class="btn btn-primary" data-bs-placement="top" data-bs-toggle="" title="" data-bs-original-title="Filter"> <i class="fe fe-search"></i> </button>
                                            <button type="button" onclick="history.back()" class="btn btn-primary" data-bs-placement="top" data-bs-toggle="" title="" data-bs-original-title="Refresh"> <i class="fe fe-refresh-ccw"></i> </button>



                                        </div>
                                    </div>

                                </div>

                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table  table-vcenter text-nowrap table-bordered border-bottom" id="myTable">
                        <thead>
                            <tr>
                                <th class="border-bottom-0 w-5">Sr.#</th>
                                <th class="border-bottom-0 w-5">Staff</th>
                                <th class="border-bottom-0">Applied Date</th>
                                <th class="border-bottom-0" >Loan</th>
                                <th class="border-bottom-0" title="Installment Per Month">IMP</th>
                                <th class="border-bottom-0">Reason</th>
                                <th class="border-bottom-0">Status</th>
                                <th class="border-bottom-0">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model.ListLoanData)
                                {

                                    <tr>
                                        <td>@i</td>
                                        <td>

                                            <div class="d-flex">
                                                <div class="table_img brround bg-light me-3">
                                                    <img src="@item.StaffSnap" alt="img" class="">
                                                </div>
                                                <div class="me-3 mt-0 mt-sm-2 d-block">
                                                    <a asp-action="LoanApproval" asp-route-id="@item.LoanApplicationId" asp-route-staffid="@item.StaffId"><h6 class="mb-0 fs-13 font-weight-semibold">@item.StaffRegistrationNo - @item.StaffName</h6></a>
                                                    <div class="clearfix"></div>
                                                    <small class="text-muted">@item.Designation</small>
                                                </div>
                                            </div>


                                        </td>
                                        <td>
                                            <div class="d-flex">
                                                <div class="me-3 d-block">
                                                    <span class="mb-0 fs-15 ">@item.LoanTypeTitle</span>
                                                    <div class="clearfix"></div>
                                                    <small class="text-muted"> @item.LoanApplicationDate</small>
                                                </div>
                                            </div>


                                        </td>
                                        <td>@Convert.ToDecimal(item.Amount).ToString("N2")</td>
                                        <td>@Convert.ToDecimal(item.InstallmentPerMonth).ToString("N2")</td>
                                        <td style="max-width: 200px; word-wrap: break-word!important; overflow: hidden;text-overflow: ellipsis;">@item.Reason</td>


                                        @if (item.LoanStatusId == 1) // Approved
                                        {
                                            <td class="text-center"> <span class="badge badge-success"><i class="mdi mdi-circle-medium"></i> Approved</span></td>

                                        }
                                        else if (item.LoanStatusId == 2) // Rejected
                                        {
                                            <td class="text-center"> <span class="badge badge-danger"><i class="mdi mdi-circle-medium"></i> Rejected</span></td>

                                        }
                                        else
                                        {
                                            <td class="text-center"> <span class="badge badge-warning"><i class="mdi mdi-circle-medium"></i> Pending</span></td>

                                        }

                                        <td class="text-start d-flex">
                                            <a href="#" onclick="showloanApprovalmodel(@item.LoanApplicationId,1)" class="action-btns1" >
                                                <i class="feather feather-check text-success mt-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Approve"></i>
                                            </a>
                                            <a href="#" onclick="showloanApprovalmodel(@item.LoanApplicationId,2)" class="action-btns1" >
                                                <i class="feather feather-x text-danger mt-1" data-bs-toggle="tooltip" data-bs-placement="top" title="Rejected"></i>
                                            </a>
                                            @if (item.LoanStatusId != 1 && item.LoanStatusId != 2) // New
                                            {
                                                <a href="#" onclick="showforwardloanmodel(@item.LoanApplicationId)" class="action-btns1" data-bs-toggle="tooltip" data-bs-placement="top" title="Forward">
                                                    <i class="text-warning fe fe-arrow-right-circle mt-1"></i>
                                                </a>
                                                <a asp-action="LoanDelete" asp-route-id="@item.LoanApplicationId" class="action-btns1" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                                    <i class="feather feather-trash-2 text-danger mt-1"></i>
                                                </a>
                                            }
                                            <a asp-action="LoanApproval" asp-route-id="@item.LoanApplicationId" asp-route-staffid="@item.StaffId" class="action-btns1">
                                                <i class="feather feather-eye  text-primary mt-1" data-bs-toggle="tooltip" data-bs-placement="top" title="view"></i>
                                            </a>


                                        </td>
                                    </tr>
                                    i++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Row-->
