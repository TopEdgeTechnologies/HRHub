                                        <td>
                                            <div class="d-flex">
                                                <div class="me-3 d-block">
                                                    <span class="mb-0 fs-15 ">@item.LeaveTypeTitle</span>
                                                    <div class="clearfix"></div>
                                                    <small class="text-muted"> @item.LeaveAppliedOnDate</small>
                                                </div>
                                            </div>


