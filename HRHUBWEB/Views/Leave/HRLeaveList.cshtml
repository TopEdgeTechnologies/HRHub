            <div class="card-body">
                <div class="table-responsive">
                    <table class="table  table-vcenter text-nowrap table-bordered border-bottom" id="myTable">
                        <thead>
                            <tr>
                                <th class="border-bottom-0 w-5">Sr.#</th>
                                @*<th class="border-bottom-0 w-5">#Emp ID</th>*@
                                <th class="border-bottom-0 w-5">Staff</th>
                                <th class="border-bottom-0">Applied Date</th>
                                @*<th class="border-bottom-0">From</th>
                                <th class="border-bottom-0">To</th>*@
                                @*<th class="border-bottom-0">Leave Date</th>*@
                                <th class="border-bottom-0">Days</th>
                                <th class="border-bottom-0">Reason</th>
                                @*<th class="border-bottom-0">Applied on</th>*@
                                <th class="border-bottom-0">Status</th>
                                <th class="border-bottom-0">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int i = 1;
                                foreach (var item in Model.ListAllleaves)
                                {

                                    <tr>
                                        <td>@i</td>
                                        @* <td>@item.StaffRegistrationNo</td>*@
                                        <td>

                                            <div class="d-flex">
                                                <div class="table_img brround bg-light me-3">
                                                    <img src="@item.StaffSnap" alt="img" class="">
                                                </div>
                                                <div class="me-3 mt-0 mt-sm-2 d-block">
                                                    <a asp-action="LeaveApproval" asp-route-id="@item.LeaveId" asp-route-staffid="@item.StaffId"><h6 class="mb-0 fs-13 font-weight-semibold" data-staffid="@item.StaffId">@item.StaffRegistrationNo - @item.StaffName</h6></a>
                                                    <div class="clearfix"></div>
                                                    <small class="text-muted designation">@item.Designation</small>
                                                    <small hidden class="text-muted department">@item.Department</small>
                                                </div>
                                            </div>


                                        </td>
                                        <td>
                                            <div class="d-flex">
                                                <div class="me-3 d-block">
                                                    <span class="mb-0 fs-15 " data-leavetypeid="@item.LeaveTypeId">@item.LeaveTypeTitle</span>
                                                    <div class="clearfix"></div>
                                                    <small class="text-muted"> @item.LeaveAppliedOnDate</small>
                                                </div>
                                            </div>


                                        </td>

                                        <td data-startdate="@item.LeaveStartDate" data-enddate="@item.LeaveEndDate" data-halfleave="@item.MarkAsHalfLeave" data-shortleave="@item.MarkAsShortLeave">@item.Days</td>
                                        <td style="max-width: 200px; word-wrap: break-word!important; overflow: hidden;text-overflow: ellipsis;">@item.LeaveSubject</td>
                                        @*<td>@item.LeaveAppliedOnDate</td>*@

                                        @if (item.LeaveStatusId == 1) // New
                                        {
                                            <td class="text-center"><span class="badge badge-primary"><i class="mdi mdi-circle-medium"></i> New</span></td>
                                        }
                                        else if (item.LeaveStatusId == 2) // Pending
                                        {
                                            <td class="text-center"> <span class="badge badge-warning"><i class="mdi mdi-circle-medium"></i> Pending</span></td>

                                        }
                                        else if (item.LeaveStatusId == 3) // Approved
                                        {
                                            <td class="text-center"> <span class="badge badge-success"><i class="mdi mdi-circle-medium"></i> Approved</span></td>

                                        }
                                        else if (item.LeaveStatusId == 4) // Rejected
                                        {
                                            <td class="text-center"> <span class="badge badge-danger"><i class="mdi mdi-circle-medium"></i> Rejected</span></td>

                                        }

                                        <td class="text-start d-flex">
                                            <a href="#" onclick="showleaveApprovalmodel(this,@item.LeaveId,3,0)" class="action-btns1" data-bs-toggle="tooltip" data-bs-placement="top" title="Accept">
                                                <i class="feather feather-check text-success mt-1"></i>
                                            </a>
                                            <a href="#" onclick="showleaveApprovalmodel(this,@item.LeaveId,4,0)" class="action-btns1" data-bs-toggle="tooltip" data-bs-placement="top" title="Rejected">
                                                <i class="feather feather-x text-danger mt-1"></i>
                                            </a>
                                            @if (item.LeaveStatusId == 1) // New
                                            {
                                                <a href="#" onclick="showforwardleavemodel(this,@item.LeaveId,0)" class="action-btns1" data-bs-toggle="tooltip" data-bs-placement="top" title="Forward">
                                                    <i class="text-warning fe fe-arrow-right-circle mt-1"></i>
                                                </a>
                                                @*<a asp-action="LeaveDelete" asp-route-id="@item.LeaveId" class="action-btns1" data-bs-toggle="tooltip" data-bs-placement="top" title="Delete">
                                                    <i class="feather feather-trash-2 text-danger mt-1"></i>
                                                </a>*@
                                            }
                                            <a asp-action="LeaveApproval" asp-route-id="@item.LeaveId" asp-route-staffid="@item.StaffId" class="action-btns1">
                                                <i class="feather feather-eye  text-primary mt-1" data-bs-toggle="tooltip" data-bs-placement="top" title="view"></i>
                                            </a>


                                        </td>
                                    </tr>
                                    i++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
